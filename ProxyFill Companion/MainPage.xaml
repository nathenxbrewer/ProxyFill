<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.NavBarIsVisible="False"
             x:Class="ProxyFill_Companion.MainPage">

    <Grid RowDefinitions="40,*,60">
            <Label
                Text="ProxyFill Companion"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />
            <VerticalStackLayout Grid.Row="1">
                <Label
                    Text="Select your ProxyFill card list file to get started."
                    SemanticProperties.HeadingLevel="Level2"
                    SemanticProperties.Description="Select your ProxyFill card list file to get started."
                    FontSize="18"
                    HorizontalOptions="Center" />
            </VerticalStackLayout>


            <Button
                x:Name="SelectFileButton"
                Grid.Row="2"
                Text="Select File"
                Clicked="OnSelectFileClicked"
                HorizontalOptions="Center" />
</Grid>

</ContentPage>
